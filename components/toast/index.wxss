.i-toast{position:fixed;top:40%;left:50%;transform:translate3d(-50%,-50%,0);background:rgba(34, 34, 34, 0.95);box-shadow: 0 2px 6px 0 rgba(0,0,0,0.32);color:#fff;font-size:0;line-height:1.5em;margin:0 auto;box-sizing:border-box;padding:15px 25px;text-align:center;border-radius:4px;z-index:1010}
.i-toast-mask{position:fixed;top:0;bottom:0;left:0;right:0;z-index:1010}
.i-toast-icon{font-size:38px!important;margin-bottom:6px}
.i-toast-image{max-width:100px;max-height:100px}
.i-toast-content{font-family: PingFangSC-Medium;font-size: 28rpx;color: #FFFFFF;line-height: 28rpx;}
.i-toast-loading{display:inline-block;vertical-align:middle;width:28px;height:28px;background:0 0;border-radius:50%;border:2px solid #fff;border-color:#fff #fff #fff #2d8cf0;animation:btn-spin .8s linear;animation-iteration-count:infinite}
@keyframes btn-spin{0%{transform:rotate(0)}100%{transform:rotate(360deg)}}